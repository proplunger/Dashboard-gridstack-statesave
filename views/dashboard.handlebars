<script src="./js/delete.js"></script>
<div class="max-w-4xl mx-auto flex flex-col items-start p-5 gap-5">
    <h1 class="text-4xl">{{name}}'s Pages</h1>
    {{#if pages}}
    <div class="border rounded-sm w-full">
        {{#each pages}}
            <div class="flex justify-between items-center w-full p-3">
                <div>
                    <h1 class="text-4xl">{{title}}</h1>
                    <p class="text-lg text-zinc-600 flex items-center">{{createdAt}}</p>
                </div>
                <div class="flex gap-2">
                    <a href="/pageview?page_id={{id}}" class="rounded-full bg-red-600 px-4 py-1 shadow-lg text-white text-2xl hover:bg-red-500 hover:shadow-xl hover:-translate-y-0.5 transition-all">View</a>
                    {{!-- <a href="api/user/pages/{{id}}" class="rounded-full bg-red-600 px-4 py-1 shadow-lg text-white text-2xl hover:bg-red-500 hover:shadow-xl hover:-translate-y-0.5 transition-all">Edit</a> --}}
                    <a onclick="deletePage({{id}})" class="rounded-full bg-red-600 px-4 py-1 shadow-lg text-white text-2xl hover:bg-red-500 hover:shadow-xl hover:-translate-y-0.5 transition-all">Delete</a>
                </div>
            </div>
            <hr class="{{#if @last}} hidden {{/if}}">
        {{/each}}
    </div>
    {{else}}
        <h3>You don't have any saved pages.</h3>
    {{/if}}

    <a id="create-page-btn" href="/create" class="rounded-full bg-red-600 px-4 py-1 shadow-lg text-white text-2xl hover:bg-red-500 hover:shadow-xl hover:-translate-y-1 transition-all">Create</a>
</div>
